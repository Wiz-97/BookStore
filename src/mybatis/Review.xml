<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Review">
	<select id="getReview" parameterType="int" resultType="vo.ReviewVo">
		SELECT * FROM PRO_REVIEW WHERE mno = #{mno}
	</select>
	
	<insert id="insert" parameterType="vo.ReviewVo">
		INSERT INTO PRO_REVIEW (rno,mno,nickName,r_content) 
		VALUES (rno_seq.nextval,#{mno},#{nickName},#{r_content})
	</insert>
	
	<delete id="delete" parameterType="int">
		DELETE FROM PRO_REVIEW WHERE rno = #{rno}
	</delete>
</mapper>